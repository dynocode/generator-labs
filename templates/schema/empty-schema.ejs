  extend type Query {
    <%= name %>(id: ID!): <%= name %>!
    <%= name %>s: [<%= name %>!]
  }

  extend type Mutation {
    create<%= name %>(

    ): <%= name %>!
    update<%= name %>(
      id: ID!
    ): <%= name %>!
